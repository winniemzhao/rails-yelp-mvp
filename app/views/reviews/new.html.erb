<h1>New Review</h1>

<%#= render "form", restaurant: @restaurant, review: @review %>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.input :content %>
  <%= f.submit "Create New Review", class: "btn btn-primary"%>
<% end %>


<%= link_to "Back to all restaurants", restaurants_path %>
<%= link_to "Back to current restaurant", @restaurant %>
