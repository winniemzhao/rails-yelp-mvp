<h1><%= @restaurant.name %></h1>
<p>Category: <%= @restaurant.category %></p>
<h2>Contact Information</h2>
<p>Address: <%= @restaurant.address %></p>
<p>Phone Number: <%= @restaurant.phone_number %></p>

<div class="reviews">
  <%#= link_to "New Review", new_restaurant_review_path(@restaurant) %>
  <h2>Reviews</h2>
  <ul>
    <% @reviews.each do |review| %>
      <li>
        <p class="rating"><%= "â­" * review.rating %></p>
        <p class="content"><%= review.content %></p>
      </li>
    <% end %>
  </ul>

  <h4>New Review</h4>
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.input :content %>
    <%= f.submit "Create New Review", class: "btn btn-primary"%>
  <% end %>

</div>

<%= link_to "Back to all restaurants", restaurants_path %>
